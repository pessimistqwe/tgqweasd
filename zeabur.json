{
  "$schema": "https://zeabur.com/schema.json",
  "name": "eventpredict",
  "description": "Telegram Mini App Prediction Market",
  "env": "docker",
  "rootDirectory": ".",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "start": {
    "cmd": "uvicorn index:app --host 0.0.0.0 --port $PORT --app-dir api"
  },
  "envs": {
    "PORT": {
      "value": "8000",
      "description": "Port for the application"
    },
    "TEST_DB_PATH": {
      "value": "/tmp/events.db",
      "description": "SQLite database path"
    },
    "DISABLE_SCHEDULER": {
      "value": "0",
      "description": "Enable background scheduler"
    },
    "POLYMARKET_SYNC_INTERVAL": {
      "value": "7200",
      "description": "Polymarket sync interval in seconds"
    },
    "PYTHONUNBUFFERED": {
      "value": "1",
      "description": "Unbuffered Python output"
    }
  }
}
