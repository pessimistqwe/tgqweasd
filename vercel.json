{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    },
    {
      "src": "/",
      "dest": "frontend/index.html"
    }
  ],
  "env": {
    "TEST_DB_PATH": "/tmp/events.db",
    "DISABLE_SCHEDULER": "0",
    "POLYMARKET_SYNC_INTERVAL": "7200"
  },
  "functions": {
    "api/index.py": {
      "maxDuration": 60
    }
  }
}
